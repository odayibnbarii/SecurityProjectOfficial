<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dp" />
            <stroke android:width="7dp" android:color="#0C4E70" />
            <gradient android:angle="-90" android:startColor="#155374" android:endColor="#114E8B"  />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00deb887"/>
            <stroke android:color="#0F2835" android:width="2dp" />
            <!--corners allow us to make the rounded corners button-->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>